<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <TextView
        android:id="@+id/fix_reference_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Circular center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/circle_position_view"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="#45ca75"
        app:layout_constraintCircle="@id/fix_reference_view"
        tools:layout_constraintCircleAngle="90"
        tools:layout_constraintCircleRadius="100dp" />

</androidx.constraintlayout.widget.ConstraintLayout>