<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".placeholder.PlaceholderActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <include
            android:id="@+id/content"
            layout="@layout/flow_content" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wrap mode"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/flow_wrap_mode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/flow_wrap_mode_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NONE" />

                <RadioButton
                    android:id="@+id/flow_wrap_mode_chain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHAIN" />

                <RadioButton
                    android:id="@+id/flow_wrap_mode_spread_aligned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALIGNED" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Horizontal style"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/flow_horizontal_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/flow_horizontal_style_packed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PACKED" />

                <RadioButton
                    android:id="@+id/flow_horizontal_style_spread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPREAD" />

                <RadioButton
                    android:id="@+id/flow_horizontal_style_spread_inside"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPREAD INSIDE" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Vertical align"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/flow_vertical_align"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/flow_vertical_align_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOP" />

                <RadioButton
                    android:id="@+id/flow_vertical_align_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CENTER" />

                <RadioButton
                    android:id="@+id/flow_vertical_align_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOTTOM" />

            </RadioGroup>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>